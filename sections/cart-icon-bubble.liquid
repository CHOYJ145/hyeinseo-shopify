{%- liquid
  if cart == empty
    render 'icon-cart-empty'
  else
    render 'icon-cart'
  endif
-%}
<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
{%- if cart != empty -%}

<a href="{{ routes.cart_url }}" class="header__menu-item list-menu__item link link--text focus-inset" id="cart-icon-bubble">
          <span>Cart</span>
          {%- if cart != empty -%}
            {%- if cart.item_count < 100 -%}
              <span aria-hidden="true">&nbsp;{{ cart.item_count }}</span>
            {%- endif -%}
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          {%- endif -%}
        </a>
{%- endif -%}
