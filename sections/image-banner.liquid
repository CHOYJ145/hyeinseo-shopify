        }

        function scrollLoop() {
            enterNewScene = false;
            prevScrollHeight = 0;

            for (let i = 0; i < currentScene; i++) {
                prevScrollHeight += sceneInfo[i].scrollHeight;
            }

            if (yOffset > prevScrollHeight / 2 + sceneInfo[currentScene].scrollHeight) {
