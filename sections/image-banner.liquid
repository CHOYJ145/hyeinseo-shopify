        }
    }
    .locale-selectors__container {
        display: none !important;
    }

    .hero-video {
        position: fixed;
        z-index: 0;
        top: 50%;
        left: 50%;
        width: 100%;
        height: 100vh;
        /*height: calc(var(--vh, 1vh) * 100);*/
        overflow: hidden;
        transform: translate(-50%, -50%);
    }

    #video-m {
        display: block;
        margin: auto;
        width: 100%;
        object-fit: cover;
        /*height: calc(var(--vh, 1vh) * 100);*/
        height: 100vh;
    }

    @media screen and (max-width: 1024px) {
        .hero-video {
            position: absolute;
            z-index: 0;
            top: 0;
            left: 0;
            width: 100%;
            /*height: 100vh;*/
            height: 100%;
            overflow: hidden;
            transform: translate(0, 0);
        }
    }

    .video-dim {
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
    }

    .video-dim-inner {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .video-dim-inner *,
    .video-dim-inner button {
        color: #fff;
        font-size: 14px;
        line-height: 16px;
    }

    @media screen and (max-width: 1024px) {
        .video-dim-inner *,
        .video-dim-inner button {
            color: #fff;
            font-size: 16px;
            line-height: 19px;
        }
    }

    .video-dim button {
        appearance: none;
        background: transparent;
        border: 0;
