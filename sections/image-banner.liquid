        .dim-cont {
            position: absolute;
            top: calc(var(--vh, 1vh) * 50);
            left: 0;
            padding: 0 6px;
            grid-template-columns: 1.5fr 0.5fr;
            box-sizing: border-box;
            align-items: baseline;
            display: block;
        }
    }

